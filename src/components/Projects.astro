---
import GitHub from "../icons/GitHub.astro"
import NextJS from "../icons/NextJS.astro"
import Tailwind from "../icons/Tailwind.astro"
import Link from "../icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}

const PROJECTS = [
  {
    title: "Portfolio Personal",
    description: "Mi portfolio personal desarrollado con Astro y Tailwind CSS. Un sitio web moderno y minimalista que muestra mis proyectos y habilidades como desarrollador.",
    link: "https://felipejerez.dev",
    github: "https://github.com/0xtakemichi/portfolio",
    image: "/portfolio-preview.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Sistema de Gestión BIM",
    description: "Sistema integral para la gestión de proyectos BIM, desarrollado con Next.js y TypeScript. Incluye gestión de modelos 3D, documentación y colaboración en tiempo real.",
    link: "https://bim-system.vercel.app",
    github: "https://github.com/0xtakemichi/bim-system",
    image: "/bim-preview.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
]
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col bg-gray-100 dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 cursor-pointer group">
        <div class="relative w-full h-48">
          <img 
            alt={title} 
            class="object-cover w-full h-full transition duration-500 group-hover:scale-105" 
            loading="lazy" 
            src={image} 
          />
        </div>

        <div class="p-6">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">
            {title}
          </h3>
          
          <div class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag) => (
              <span class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            ))}
          </div>

          <p class="text-gray-700 dark:text-gray-400 mb-6">{description}</p>
          
          <footer class="flex items-center gap-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-5" />
                Code
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
        </div>
      </article>
    ))
  }
</div>
